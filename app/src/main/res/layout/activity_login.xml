<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tela_login"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_text_email"
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="272dp"
        android:background="@drawable/edit_text"
        android:hint="Digite seu email"
        android:imeOptions="actionDone"
        android:inputType="textEmailAddress"
        android:padding="19dp"
        android:textColor="@android:color/white"
        android:textColorHint="#F0EAEA"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_text_senha"
        android:layout_width="318dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/edit_text"
        android:hint="Digite sua senha"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:padding="19dp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_email" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_logar"
        android:layout_width="321dp"
        android:layout_height="57dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/edit_run"
        android:text="LOGAR"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_text_senha" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_ainda_nao_e_cadastrado"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:onClick="abrirCadastro"
        android:text="Ainda não é cadastrado?"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_logar" />


</androidx.constraintlayout.widget.ConstraintLayout>