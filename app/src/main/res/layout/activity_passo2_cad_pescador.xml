<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".activity.cadastros_usuarios.cadastro_pescador.Passo2CadPescador">

    <ImageView
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="79dp"
        android:background="@drawable/bg_tela_cadastro_user"
        android:contentDescription="background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:id="@+id/proximo_passo2"
        android:layout_width="129dp"
        android:layout_height="47dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edit_run"
        android:backgroundTint="@color/botao_cadastro"
        android:text="Avançar"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="@+id/button2"
        app:layout_constraintHorizontal_bias="0.984"
        app:layout_constraintStart_toStartOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout2"
        app:layout_constraintVertical_bias="0.88" />

    <EditText
        android:id="@+id/esperiencia3"
        android:layout_width="333dp"
        android:layout_height="49dp"
        android:background="@drawable/edit_run"
        android:hint="Insira o seu número de telefone"
        android:textColor="#7EFFFFFF"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="305dp" />

    <EditText
        android:id="@+id/esperiencia2"
        android:layout_width="333dp"
        android:layout_height="49dp"
        android:background="@drawable/edit_run"
        android:hint="Insira o seu CPF (Somente números)"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="223dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:fontFamily="@font/secular_one"
        android:text="CADASTRO PESCADOR"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/ic_arrow_drop_down_black_24dp" />

    <EditText
        android:id="@+id/esperiencia"
        android:layout_width="333dp"
        android:layout_height="49dp"
        android:background="@drawable/edit_run"
        android:hint="Anos de experiência como pescador"
        android:textColor="@color/design_default_color_on_secondary"
        android:textSize="17sp"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="143dp" />

</androidx.constraintlayout.widget.ConstraintLayout>